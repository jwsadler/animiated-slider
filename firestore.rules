// Firestore Security Rules for Notification System
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User notifications - only the user can access their own notifications
    match /notifications/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User FCM tokens - only the user can manage their own tokens
    match /users/{userId}/fcmTokens/{tokenId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User notification settings - only the user can manage their own settings
    match /users/{userId}/settings/{settingId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin access for creating notifications (server-side only)
    match /notifications/{userId}/messages/{messageId} {
      // Allow server-side creation with admin privileges
      allow create: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Prevent access to other users' data
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

